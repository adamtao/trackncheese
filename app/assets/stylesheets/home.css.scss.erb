#bg { position: fixed; top: 0; left: 0; }
.bgwidth { width: 100%; }
.bgheight { height: 100%; }

a {
	&.delete {
		color: red;
		font-size: 80%;
	}
}

li {
	&.logo {
		font-family: 'Domine', serif;
		margin: 4px 6px 0px 8px;
		font-size: 20px;
		font-weight: normal;
		a:link, a:visited {
			color: #FFF;
			text-shadow: 1px 1px 2px #333;
		}

	}
}
#main-content {
	background: url(<%= image_path 'light-gray-50.png' %>);
	padding: 10px 30px;
}
span.hint {
	display: block;
	font-size: 80%;
	margin-top: -6px;
	margin-bottom: 26px;
}
input[type=range] {
	width: 100%;
}
.padded {
	padding: 15px 0px;
}
.smaller {
	font-size: 80%;
}
.right-align {
	text-align: right;
}
.h-container {
	text-align: center; 
	margin: 20px 0px 10px;
}
div#about {
	padding: 20px 30px 6px 30px;
	background-color: #071354;
	color: #8eb0e2;
	font-size: 85%;
}

nav.top-bar {
	background: url(<%= image_path 'blue-80.png' %>);
}

// calendar style tweaks (making zurb and fullcalendar play nice)
table.fc-header {
	border: none;
	margin-bottom: 0;
}
table.fc-border-separate {
	border: none;
}